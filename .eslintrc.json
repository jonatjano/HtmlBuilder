{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true
        }
    },
    "rules": {
        "indent": [
            "error",
            "tab",
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
            }
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-var": "error",
        "prefer-object-spread": "error",
        "consistent-this": ["error", "that"],
        "curly": ["error", "all"],
        "no-implied-eval": "error",
        "no-multi-assign": "error",
        "radix": "error",

        "prefer-const": "warn",
        "prefer-template": "warn",
        "no-extra-parens": "warn",
        "eqeqeq": "warn",
        "array-callback-return": "warn",
        "camelcase": "warn",
        "no-warning-comments": "warn",
        "symbol-description": "warn"
    }
}
